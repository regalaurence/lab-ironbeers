<div>
    <h1>Here are the beers :</h1>

    <div class="beer-table">
        {{#each beersFromApi}}
        <div class="beer-box">
            <div>
            <img src="{{this.image_url}}" class="beer-image">
            </div>
            <div class="description">
                <h2>{{this.name}}</h2>
                <h3>{{this.tagline}}</h3>
                <p>{{this.description}}</p>
            </div>
        </div>
        {{/each}}
    </div>

</div>