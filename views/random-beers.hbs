<div>
    <h1>Here is youre beers :</h1>
      {{#each responseFromAPI}}
    <div class="random-beer">
        <div>
            <img src="{{this.image_url}}"  class="beer-image">
            <h2>{{this.name}}</h2>
            <h3>{{this.tagline}}</h3>
        </div>
            <div class="tagline-description">
                <p>{{this.description}}</p>
                <p><strong>Food pairing:</strong></p>
                {{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                <p>{{this.brewers_tips}}</p>
            </div>
    </div>
{{/each}}
</div>